rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (request.auth.token.admin == true || request.auth.token.email == 'admin@krishnarealestate.com');
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Conversations: 
    // - Admins can read/write all
    // - Users can read/write their own conversation (doc id matches uid)
    match /conversations/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Allow access to messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }

    // Properties:
    // - Public read
    // - Admin write only
    match /properties/{propertyId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /history/{historyId} {
        allow read: if isAdmin();
        allow write: if isAdmin();
      }
    }

    // Blogs:
    // - Public read (if published) - handled by query constraints usually, but here we allow read
    // - Admin write only
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /blog_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Profiles:
    // - Users can read/write their own
    // - Admins can read all
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
  }
}
